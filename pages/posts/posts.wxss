/* pages/posts/posts.wxss */

.swiper {
  width: 100%;
  height: 460rpx;
}

.swiper image {
  width: 100%;
  height: 460rpx;
}

.post-container {
  display: flex;
  flex-flow: column;
  margin:10rpx 0rpx 40rpx 0;
  background: #fff;
  border:1px solid #ededed;
  padding-bottom: 10rpx;
}
.post-author-date {
  margin:10rpx 0 20rpx 10rpx;
}

.post-author-date image {
  width:60rpx;
  height:60rpx;
  vertical-align: middle;
}
.post-author-date text {
  margin-left:20rpx;
  font-size: 26rpx;
}
.post-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  color:#333;
}
.post-image {
  width: 100%;
  height:340rpx;
  margin-bottom: 30rpx
}
.post-content {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}
.post-like {
  display: flex;
  margin-left: 20rpx;

}
.post-like image {
  width:32rpx;
  height:32rpx;
}